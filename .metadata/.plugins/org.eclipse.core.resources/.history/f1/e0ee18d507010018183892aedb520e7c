	function main_exo3(){
		
		/*Exercice 3 : Faire une calculette*/
			
		try{
			var resul;
			var v1 = parseFloat(document.getElementById("val1").value);
			var v2 = parseFloat(document.getElementById("val2").value);
			var op = parseFloat(document.getElementById("operateur").value);
			
			switch(op){
				case "+" :
					resul = v1 + v2
				case "-" :
					resul = v1-v2
				case "*" :
					resul = v1*v2
				case "/" :
					resul = v1/v2
			}
			//var result = eval(v1+operateur+v2);
			//alert (v1);
			//alert (v2);
			//alert (resul);
			//alert (result);
			result.innerHTML=resul;
			
		} catch(e) {
			console.log(e);
		}
		
		
	}